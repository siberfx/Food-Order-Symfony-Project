{% extends 'menubase.html.twig' %}

{% block title %}{{ app.user.name }} Profile{% endblock %}

{% block body %}

    <h1>User Comment List</h1>
<div class="container">
<div style="min-height: 700px;">
    <table class="table">
        <thead>
        <tr>

            <th>Subject</th>
            <th>Comment</th>
            <th>Status</th>
            <th>Restaurant</th>
            <th>Created_at</th>

            <th>Rate</th>
            <th>actions</th>
        </tr>
        </thead>
        <tbody>
        {% for comment in comments %}
            <tr>

                <td>{{ comment.subject }}</td>
                <td>{{ comment.comment }}</td>
                <td>{{ comment.status }}</td>
                <td nowrap><a href="{{ path('restaurant_show', {'id': comment.restaurantid}) }}">{{ comment.title }}</a></td>
                <td>{{ comment.created_at }}</td>
                <td>{{ comment.rate }}</td>
                <td>
                    <a href="" class="btn btn-danger">Delete</a>
                </td>


            </tr>
        {% else %}
            <tr>
                <td colspan="10">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
</div>
</div>

{% endblock %}
