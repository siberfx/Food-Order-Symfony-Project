{% extends 'adminbase.html.twig' %}

{% block title %}Setting Page{% endblock %}

{% block body %}
<!-- **********************************************************************************************************************************************************
MAIN CONTENT
*********************************************************************************************************************************************************** -->
<!--main content start-->
<section id="main-content">
    <section class="wrapper site-min-height">
        <h3><i class="fa fa-angle-right"></i>Setting Page</h3>
        <div class="row mt">
            <div class="col-lg-12">
                <p>


    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Title</th>
                <th>Company</th>
                <th>Email</th>
                <th>Status</th>


            </tr>
        </thead>
        <tbody>
        {% for setting in settings %}
            <tr>
                <td>{{ setting.id }}</td>
                <td>{{ setting.title }}</td>
                <td>{{ setting.company }}</td>
                <td>{{ setting.email }}</td>
                <td>{{ setting.status }}</td>


                <td>
                    <a href="{{ path('admin_setting_show', {'id': setting.id}) }}" class="btn btn-space btn-primary">show</a>
                    <a href="{{ path('admin_setting_edit', {'id': setting.id}) }}" class="btn btn-space btn-primary">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="21">no records found</td>
                    <a href="{{ path('admin_setting_new') }}" class="btn btn-success">Create New </a>

            </tr>
        {% endfor %}
        </tbody>
    </table>

                </p>
            </div>
        </div>
    </section>
    <!-- /wrapper -->
</section>
    <!-- /MAIN CONTENT -->
    <!--main content end-->
{% endblock %}

