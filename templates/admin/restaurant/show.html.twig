{% extends 'adminbase.html.twig' %}

{% block title %}Restaurant{% endblock %}

{% block body %}
    <!-- **********************************************************************************************************************************************************
    MAIN CONTENT
    *********************************************************************************************************************************************************** -->
    <!--main content start-->
    <section id="main-content">
        <section class="wrapper site-min-height">
            <h3><i class="fa fa-angle-right"></i> Show Category Page</h3>
            <div class="row mt">
                <div class="col-lg-12">
                    <p>
                    <h1>Restaurant</h1>

                    <table class="table">
                        <tbody>
                        <tr>
                            <th>Id</th>
                            <td>{{ restaurant.id }}</td>
                        </tr>
                        <tr>
                            <th>Title</th>
                            <td>{{ restaurant.title }}</td>
                        </tr>
                        <tr>
                            <th>Keywords</th>
                            <td>{{ restaurant.keywords }}</td>
                        </tr>
                        <tr>
                            <th>Description</th>
                            <td>{{ restaurant.description }}</td>
                        </tr>
                        <tr>
                            <th>Image</th>
                            <td><img src="{{ asset('uploads/images/' ~ restaurant.image) }}" height="100"></td>
                        </tr>
                        <tr>
                            <th>Address</th>
                            <td>{{ restaurant.address }}</td>
                        </tr>
                        <tr>
                            <th>Phone</th>
                            <td>{{ restaurant.phone }}</td>
                        </tr>
                        <tr>
                            <th>Email</th>
                            <td>{{ restaurant.email }}</td>
                        </tr>
                        <tr>
                            <th>City</th>
                            <td>{{ restaurant.city }}</td>
                        </tr>
                        <tr>
                            <th>Country</th>
                            <td>{{ restaurant.country }}</td>
                        </tr>
                        <tr>
                            <th>Location</th>
                            <td>{{ restaurant.location }}</td>
                        </tr>
                        <tr>
                            <th>Status</th>
                            <td>{{ restaurant.status }}</td>
                        </tr>
                        <tr>
                            <th>Created_at</th>
                            <td>{{ restaurant.createdAt ? restaurant.createdAt|date('Y-m-d H:i:s') : '' }}</td>
                        </tr>
                        <tr>
                            <th>Updated_at</th>
                            <td>{{ restaurant.updatedAt ? restaurant.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
                        </tr>
                        </tbody>
                    </table>
                    <div class="col-lg-6 col-md-6 col-sm-12">

                        <a href="{{ path('admin_restaurant_index') }}" class="btn btn-info">Back To List</a>
                    </div>
                    <div class="col-lg-6 col-md-6 col-sm-12">

                        <a href="{{ path('admin_restaurant_edit', {'id': restaurant.id}) }}" class="btn btn-success">Edit</a>
                    </div>

                    {{ include('admin/restaurant/_delete_form.html.twig') }}
                    </p>
                </div>
            </div>
        </section>
        <!-- /wrapper -->
    </section>
    <!-- /MAIN CONTENT -->
    <!--main content end-->
{% endblock %}
